<action name="hsover">

if(stagewidth GE 1200, 
tween(scale,1.0,%1);
); 

if((stagewidth LT 1200) AND (stagewidth GE 1000), 
tween(scale,0.9,%1);
); 

if((stagewidth LT 1000) AND (stagewidth GE 800), 
tween(scale,0.8,%1);
); 

if(stagewidth LT 800, 
tween(scale,0.7,%1);
);

tween(alpha,1.0,0.3);

</action>

<action name="hsout">

if(stagewidth GE 1200, 
tween(scale,1.0,%1);
); 

if((stagewidth LT 1200) AND (stagewidth GE 1000), 
tween(scale,0.9,%1);
); 

if((stagewidth LT 1000) AND (stagewidth GE 800), 
tween(scale,0.8,%1);
); 

if(stagewidth LT 800, 
tween(scale,0.7,%1);
);

tween(alpha,0.5,0.3);

</action>


