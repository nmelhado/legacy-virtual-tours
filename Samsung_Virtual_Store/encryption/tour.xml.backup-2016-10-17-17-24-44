<events name="IoTLoad" onloadcomplete="delayedcall(0.9,set(view.fov,105);delayedcall(0.1,tween(layer[ExtHouse].alpha,0.0,0.6);set(layer[dTouch].visible,true);delayedcall(0.6,set(layer[ExtHouse].visible,false);delayedcall(1.0,lightson();););););" />

<action name="lightson">
	lookto(-15,0,105,smooth(100,50,100),true,true,true);
	wait(2.0);
	lookto(15,0,105,smooth(100,50,100),true,true,true);
	wait(2.0);
	lookto(0,0,105,smooth(100,50,100),true,true,true);
	delayedcall(1.0,
		set(layer[Phone001].visible,true);
		tween(layer[Phone001].y,-140,1.4);
	);
	delayedcall(3.4,
		tween(layer[PhoneSelector].alpha,0.4,0.3);
		delayedcall(0.5,tween(hotspot[Dark01].alpha,0.0,2.0);delayedcall(2.0,set(hotspot[Dark01].visible,false);););
		delayedcall(0.4,tween(layer[PhoneSelector].alpha,0.0,0.3););
	);
	delayedcall(5.8,
		delayedcall(1.4,set(layer[Phone001].visible,false);set(layer[dTouch].visible,false););
		tween(layer[Phone001].y,1000,1.4);
	);
	delayedcall(7.0,looktohotspot(FHub,105,smooth(100,50,150)););
</action>

