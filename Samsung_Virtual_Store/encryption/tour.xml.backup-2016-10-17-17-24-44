<action name="EnterIoT">
	set(layer[ExtHouse].visible,true);
	tween(layer[ExtHouse].alpha,1.0,0.6);
	delayedcall(0.85,
		if(linkedscene,
			tween(view.fov,100,0.39,easeInOutSine);
			delayedcall(0.4,
				set(events.onloadcomplete,null);
				loadscene(get(linkedscene),null,get(skin_settings.loadscene_flags),get(skin_settings.loadscene_blend));
				skin_updatescroll();
			);
		);
	);
</action>

<action name="ExitIoT">
	if(linkedscene,
		tween(view.fov,100,0.39,easeInOutSine);
		delayedcall(0.4,
			set(events.onloadcomplete,null);
			loadscene(get(linkedscene),null,MERGE|KEEPVIEW,get(skin_settings.loadscene_blend));
			skin_updatescroll();
		);
	);
</action>

<action name="playvideo">
	hotspot[videoPoster Ad].play();
	looktohotspot(Video Start,85,smooth(100,50,20));
</action>

<action name="stopvideo">
	hotspot[videoPoster Ad].stop();
	tween(view.fov,105,2.0);
</action>

<action name="purchase">
	delete(objrotvar);
	set(objrotvar,%7);
	buildframes(%1,%2);
	set(layer[PurchaseBackdrop].visible,true);
	tween(layer[PurchaseBackdrop].alpha,1.0,0.8);
	set(layer[%4].visible,true);
	set(layer[%3].visible,true);
	set(layer[%5].visible,true);
	tween(layer[%5].bgalpha,0.6,0.8);
	set(layer[%6].visible,true);
	delayedcall(3.0,
		set(objautorot,true);
		if(objrotvar == %7,doautorotate(););
	);
</action>

<action name="closepurchase">
	delayedcall(0.8,set(layer[PurchaseBackdrop].visible,false););
	tween(layer[PurchaseBackdrop].alpha,0.0,0.8);
	delayedcall(0.8,set(layer[%3].visible,false););
	tween(layer[%3].bgalpha,0.0,0.8);
	set(layer[%2].visible,false);
	set(plugin[%1].visible,false);
	set(layer[%4].visible,false);
	set(objautorot,false);
	doautorotate();
</action>

